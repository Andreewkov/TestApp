<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardBack"
            android:orientation="vertical"
            android:padding="12dp">

        <TextView
                android:id="@+id/textSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:text="The Wall Street Journal"
                android:textStyle="bold|italic"
                android:gravity="start"/>

        <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:text="Writer Sues Twitter Over Ban for Criticizing Transgender People"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

        <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:text="For more than two decades, government pediatrician Stanley Patrick Weber raised suspicions that he was a pedophile. The Wall Street Journal and Frontline investigate how the Indian Health Service doctor was transferred from reservation to reservation and alloâ€¦"/>


        <TextView
                android:id="@+id/textPublished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorLight"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:text="019-02-13T03:00:01Z"
                android:textStyle="bold|italic"
                android:layout_gravity="end"/>

        <TextView
                android:id="@+id/textAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorLight"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:text="Georgia Wells"
                android:textStyle="bold|italic"
                android:layout_gravity="end"/>


    </LinearLayout>

</android.support.v7.widget.CardView>